        "args": ["${workspaceFolder}/pack.in","shuffle","10","A","Simple","B","Simple","C","Simple","D","Simple"],
        "stopAtEntry": false,
        "cwd": "${fileDirname}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
            {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
